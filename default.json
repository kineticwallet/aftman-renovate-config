{
    "extends": [
      "config:base"
    ],
    "customManagers": [
      {
        "customType": "regex:aftman",
        "fileMatch": ["^aftman.toml$"],
        "matchStrings": [".+ = { name = \"(?<depName>.+)\", version = \"(?<currentValue>.+)\" }", ".+ = (?<depName>.+)@(?<currentValue>.+)"],
        "datasourceTemplate": "github-releases"
      }
    ],
    "packageRules": [
      {
        "matchPaths": ["aftman.toml"],
        "extractVersion": "^v?(?<version>.*)$"
      }
    ]
}
