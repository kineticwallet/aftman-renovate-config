{
    "extends": [
      "config:base"
    ],
    "regexManagers": [
      {
        "fileMatch": ["^aftman.toml$"],
        "matchStrings": [".+ = { source = \"(?<depName>.+)\", version = \"(?<currentValue>.+)\" }"],
        "datasourceTemplate": "github-releases"
      }
    ],
    "packageRules": [
      {
        "matchPaths": ["aftman.toml"],
        "extractVersion": "^v?(?<version>.*)$"
      }
    ]
}
  
